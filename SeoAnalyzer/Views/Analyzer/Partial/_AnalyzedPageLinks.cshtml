@model IEnumerable<SeoAnalyzer.Models.PageLink>

@using SeoAnalyzer.Extensions

<link href="~/Content/DataTables-1.10.2/css/dataTables.bootstrap.css" rel="stylesheet" />

<script src="~/Scripts/DataTables-1.10.2/jquery.dataTables.min.js"></script>

<script src="~/Scripts/DataTables-1.10.2/dataTables.bootstrap.js"></script>


<script>
    $(document).ready(function ()
    {
        $('#links-table').dataTable({
            "lengthChange": false,
            "stateSave": true,
        });
    })
</script>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">PAGE LINKS BLOCK</h3>
    </div>
    <div class="panel-body">
        <table id="links-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Text</th>
                    <th>Url</th>
                </tr>
            </thead>

            <tbody>
                @foreach (SeoAnalyzer.Models.PageLink row in Model)
                {
                    <tr>
                        <td><p>@row.Text.ClearParcerResult()</p></td>
                        <td><p>@row.Url</p></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>